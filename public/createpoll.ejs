<!doctype html>
<html>
<head>

    <title>Create Poll</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="/public/css/main.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    
</head>

<body>
    
   

<div class="container" id = "navspot">

<div class="col-sm-6 col-sm-offset-3">

    <h1>Create Poll</h1>
    


    <form action="/polls/create" method="POST">
        <div class="form-group">
            <label>Poll</label>
            <input type="text" class="form-control" name="question">
        </div>
        
        <div class="form-group" id = "option1">
            <label>Option #1</label>
            <input type="text" class="form-control" name="option" >
        </div>
        
        <div class="form-group" id = "option2">
            <label>Option #2</label>
            <input type="text" class="form-control" name="option" >
        </div>
    
        <div class="form-group" id = "empty">
            <!-- THIS IS WHERE MORE OPTIONS GO -->
        </div>
        
        
        <button type="submit" class="btn btn-warning btn-lg">Submit</button>
        
        <button type = "button" class="btn btn-warning btn-lg" id = "addOption">Add Option</button>

        
    </form>

    <hr>


</div>

</div>

<script type="text/javascript" src = "/common/ajax-functions.js"></script>
<script type="text/javascript" src = "/controllers/navigationController.client.js"></script>
<script type="text/javascript" src = "/controllers/createPollController.client.js"></script>

</body>
</html>